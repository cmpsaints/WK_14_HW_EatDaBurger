<header>
	<h1>Eat Da Burger</h1>
</header>

<div class="wrapper">
	<div id="create-burger">
		<form action="/" method="POST">
			<input id="burger-name" type="text" name="burger_name" placeholder="enter a burger name">
			<button id="submit-btn" type="submit">create burger</button>
		</form>
	</div>

	<section id="burgers-container">
		<div id="burgers-available">
			<h2>Burgers Available</h2>
			{{#each burgers}}
				{{#unless this.eaten_status}}
				  <div class="burger">
				    <form class="eaten-burger-form" action="/{{id}}?_method=PUT" method="POST">
				  		<button class="eat-btn">eat</button>
				    </form>
						{{burger_name}} <span>#{{id}}</span>
				  </div>
				{{/unless}}
			{{/each}}
		</div>
		<div id="burgers-eaten">
			<h2>Burgers Eaten</h2>
			{{#each burgers}}
				{{#if this.eaten_status}}
				  <div class="burger">{{burger_name}} <span>#{{id}}</span></div>
				{{/if}}
			{{/each}}
		</div>
	</section>
</div>